---
interface Props {
  image?: string;
	link:string;
}

const props = Astro.props;
---

<a
  href={props.link}
  class='gap-2 text-sm font-medium me-2 px-3 py-0.5 rounded border inline-flex items-center justify-center opacity-70 hover:opacity-100 transform hover:scale-110 duration-75 border-white/10 bg-white/5 hover:bg-white/10'>
	{props.image && <img src={`./${props.image}.svg`} alt={props.image} class='size-5' />}
  <slot />
</a>
